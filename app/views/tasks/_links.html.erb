<%= link_to 'Show', @task, class: 'btn btn-primary btn-sm' %> 
<% if @task.created? %>
  <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-secondary btn-sm' %> 
  <%= link_to 'Launch', task_launch_path(@task), method: :post, class: 'btn btn-success btn-sm' %> 
<% end %>
<%= link_to 'Destroy', @task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
